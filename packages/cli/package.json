{
  "name": "@melaka/cli",
  "version": "0.0.0",
  "description": "CLI for Melaka - AI-powered Firestore localization",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "melaka": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/cli.ts --format cjs --dts",
    "dev": "tsup src/cli.ts --format cjs --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@melaka/core": "workspace:*",
    "@melaka/firestore": "workspace:*",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "@types/node": "^20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rizahassan/melaka.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
